<div class="sceneMap character-scene-display">
	<fieldset class="button-group">
		<input type="radio" name="mode" id="editMode" data-action="toggleMode" value="edit" {{#if (eq mode "edit")}}
			checked	
		{{/if}}>
		<label for="editMode">Edit</label>

		<input type="radio" name="mode" id="displayMode" data-action="toggleMode" value="display" {{#if (eq mode "display")}}
			checked	
		{{/if}}/>
		<label for="displayMode">Display</label>
	</fieldset>
	{{#if (eq mode "display")}}
		
<section id="scene-display-bar" class="displayModeWrapper display-bar">
<ul class="character-group">
    {{#each characters as |character|}}
      <li
        class="interactive"
        {{!-- data-action="pan" --}}
        data-name="{{character.name}}"
        data-img="{{character.imagePath}}"
      >
        <img src="{{character.imagePath}}" alt="" />
		<ul class="hover-controls">
			{{#each @root.displayTiles as |tileData|}}
				<li><button data-action="pan" data-target="{{tileData.displayName}}">{{tileData.displayName}}</button></li>
			{{/each}}
		</ul>
      </li>
    {{/each}}
  </ul>
  <ul class="scene-group">
    {{#each innerScenes as |scene|}}
      <li
        class="interactive"
        data-action="pan"
        data-name="{{scene.name}}"
        data-img="{{scene.imagePath}}"
      >
        <img src="{{scene.imagePath}}" alt="" />
      </li>
    {{/each}}
  </ul>
</section>
{{else}}
<section class="editModeWrapper">
<section class="innerSceneWrapper">
	<ul class="innerScenes">
	{{#each innerScenes as |scene|}}
	<li class="option rounded interactive">
		<img src="{{scene.imagePath}}" alt="{{scene.name}}" data-action="browse">
		<input type="text" value="{{scene.name}}">
	</li>
	{{/each}}
	<li class="option rounded interactive" data-action="browse">
		<img src="/Idyllwild/Art/Characters/placeholder.webp" alt="placeholder" data-action="browse">
		<input type="text" value="New Inner Scene">
	</li>
</ul>
</section> 
<section class="selectedCharactersWrapper">
	<h2>Characters In Scene</h2>
	  <ul class="addedToScene">
		{{#each characters}}
		<li class="option rounded interactive removable" data-action="remove" data-name="{{this.name}}" data-image-path="{{this.imagePath}}">
			<img src="{{this.imagePath}}" alt="{{this.name}}" srcset="">
			<p>{{this.name}}</p>
	</li>
		{{/each}}
	  </ul>
</section>
<hr>
	<section class="characterOptionsWrapper">
		<label for="clanSelect">Pick A Clan</label>
		<select name="clanSelect" id="clanSelect">
		   {{#each clans}}
			 <option value="{{this.value}}" {{#if (eq @root.clanSelect this.value)}}
				selected	
			  {{/if}}>
			   {{this.name}}
			 </option>
		   {{/each}}
		 </select>
		<h2>Options Characters</h2>
		 <ul class="characterOptions">
			{{#each options}}
			<li class="option rounded interactive" data-action="select" data-name="{{this.name}}" data-image-path="{{this.imagePath}}">
				<img src="{{this.imagePath}}" alt="{{this.name}}" srcset="">
				<p>{{this.name}}</p>
			</li>
			{{/each}}
		 </ul>
		 </section>
</section>
	{{/if}}
</div>